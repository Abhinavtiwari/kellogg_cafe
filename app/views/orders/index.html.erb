<div class="page-header">
  <h1>Orders</h1>
</div>

<p><%= link_to 'Add a New Order', new_order_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Item</th>
      <th>Userid</th>
      <th>Ordersummaryid</th>
      <th>Item name</th>
      <th>Item picture</th>
      <th>Item category</th>
      <th>Item quantity</th>
      <th>Item price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.item_id %></td>
        <td><%= order.userid %></td>
        <td><%= order.ordersummaryid %></td>
        <td><%= order.item_name %></td>
        <td><%= order.item_picture %></td>
        <td><%= order.item_category %></td>
        <td><%= order.item_quantity %></td>
        <td><%= order.item_price %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, order_url(order), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_order_url(order), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, order_url(order), method: 'delete', data: { confirm: "Do you really want to delete this order?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

