<div class="page-header">
  <h1>Editing Ordersummary #<%= @ordersummary.id %></h1>
</div>

<%= form_tag(ordersummary_url(@ordersummary), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :orderdate, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :orderdate, @ordersummary.orderdate, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :billamount, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :billamount, @ordersummary.billamount, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :orderstatus, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :orderstatus, @ordersummary.orderstatus, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @ordersummary.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Ordersummary", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
