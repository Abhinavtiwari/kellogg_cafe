<div class="page-header">
  <h1>Ordersummaries</h1>
</div>

<p><%= link_to 'Add a New Ordersummary', new_ordersummary_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Orderdate</th>
      <th>Billamount</th>
      <th>Orderstatus</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ordersummaries.each do |ordersummary| %>
      <tr>
        <td><%= ordersummary.orderdate %></td>
        <td><%= ordersummary.billamount %></td>
        <td><%= ordersummary.orderstatus %></td>
        <td><%= ordersummary.user_id %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, ordersummary_url(ordersummary), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_ordersummary_url(ordersummary), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, ordersummary_url(ordersummary), method: 'delete', data: { confirm: "Do you really want to delete this ordersummary?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

