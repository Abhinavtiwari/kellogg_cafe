<div class="page-header">
  <h1>Menu Items</h1>
</div>

<p><%= link_to 'Add a New Menu', new_menu_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Availability</th>
      <th>Item name</th>
      <th>Item category</th>
      <th>Item picture</th>
      <th>Item price</th>
      <th>Item description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.availability %></td>
        <td><%= menu.item_name %></td>
        <td><%= menu.item_category %></td>
        <td><%= image_tag menu.item_picture, width:80, class: "img-square" %></td>
        <td><%= menu.item_price %></td>
        <td><%= menu.item_description %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, menu_url(menu), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_menu_url(menu), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, menu_url(menu), method: 'delete', data: { confirm: "Do you really want to delete this menu?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

